  <!-- ========================= ConteÃºdo Principal ========================= -->
  <main id="conteudo-principal">
    # Adiciona/mescla class="container" em todas as tags <main> dos .html
Get-ChildItem -Recurse -Include *.html | ForEach-Object {
  $c = Get-Content $_.FullName -Raw

  # Caso 1: <main> sem atributo class -> vira <main class="container">
  $c = [regex]::Replace($c, '(?i)<main(\s*)(?=>)', '<main class="container"$1')

  # Caso 2: <main class="..."> e ainda não contém "container" -> insere container no início
  $c = [regex]::Replace($c, '(?i)<main([^>]?)class="(?![^"]\bcontainer\b)([^"]*)"', '<main$1class="container $2"')

  Set-Content $_.FullName $c -Encoding UTF8
  Write-Host "✅ Atualizado: $($_.Name)"
  
}
  </main>

