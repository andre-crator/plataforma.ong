  <script>
    // Atualiza ano no rodapÃ©
    document.getElementById('ano-atual').textContent = new Date().getFullYear();

    /*
      ============================================================
      ValidaÃ§Ã£o HTML5 com UX melhorada
      ============================================================
      - Impede envio se houver campos invÃ¡lidos.
      - Foca no primeiro campo invÃ¡lido.
      - Mostra alerta de confirmaÃ§Ã£o ao enviar.
    */
    const form = document.getElementById('form-projetos');

    form.addEventListener('submit', (e) => {
      if (!form.checkValidity()) {
        e.preventDefault();
        const primeiroInvalido = form.querySelector(':invalid');
        if (primeiroInvalido) {
          primeiroInvalido.focus();
        }
      } else {
        e.preventDefault();
        alert('InscriÃ§Ã£o enviada com sucesso! Obrigado por participar.');
        form.reset();
      }
    });
  </script>
