          <label><input type="checkbox" name="habilidades" value="logistica"> LogÃ­stica e doaÃ§Ãµes</label><br>
          <label><input type="checkbox" name="habilidades" value="suporte"> Suporte administrativo</label><br>
          <label><input type="checkbox" name="habilidades" value="tecnologia"> Apoio tecnolÃ³gico</label>
        </fieldset>

        <!-- DISPONIBILIDADE -->
        <fieldset>
          <legend>Disponibilidade</legend>

          <label for="disponibilidade">Escolha seu perÃ­odo de disponibilidade:</label>
